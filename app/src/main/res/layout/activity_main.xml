<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="io.github.changjiashuai.clips.MainActivity">

    <CheckedTextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/clip_normal"
        android:gravity="center"
        android:paddingEnd="4dp"
        android:paddingStart="32dp"
        android:drawableEnd="@drawable/ic_cancel_black_24dp"
        android:text="Hello World!" />


    <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignEnd="@+id/label"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginEnd="4dp"-->
        <!--android:background="@drawable/ic_cancel_black_24dp" />-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/label"
        android:background="@drawable/photo" />

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_camera_file"
        style="?attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/clip_normal"
        android:drawablePadding="-20dp"
        android:drawableTop="@drawable/ic_cancel_black_24dp"
        android:paddingTop="14dp"
        android:text="@string/app_name"
        android:textSize="12sp"/>
</RelativeLayout>
